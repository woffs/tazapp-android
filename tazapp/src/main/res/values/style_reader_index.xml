<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="reader_index_drawer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">-48dp</item>
        <item name="android:background">@color/toolbar_background_color</item>
    </style>


    <style name="reader_pageindex_drawer">
        <item name="android:background">@color/toolbar_background_color</item>
    </style>

    <style name="IndexText">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="IndexText.Category">
        <item name="android:textColor">@color/index_text_category</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="IndexText.Article">
        <item name="android:textColor">@color/index_text_article</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="IndexText.Article.Sub">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="IndexText.Article.Author">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/index_text_article_author</item>
    </style>

    <style name="IndexText.Toplink">
        <item name="android:textColor">@color/index_text_toplink</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PageIndexText">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="PageIndexText.Source">
        <item name="android:textColor">@color/pageindex_text_source</item>
        <item name="android:textStyle">bold</item>
    </style>




    <style name="Index">
        <item name="android:minHeight">@dimen/index_min_height</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="Index.Category">
        <item name="android:background">@color/index_background_category</item>
    </style>

    <style name="Index.Article">
        <item name="android:background">@color/index_background_article</item>
    </style>

    <style name="Index.Toplink">
        <item name="android:background">@color/index_background_toplink</item>
    </style>

    <style name="PageIndex">
        <item name="android:minHeight">@dimen/index_min_height</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="PageIndex.Source">
        <item name="android:background">@color/pageindex_background_source</item>
    </style>


    <style name="SettingsTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    
    <style name="SettingsWidget">
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>



</resources>